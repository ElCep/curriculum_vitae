@inproceedings{goffner_interdisciplinary_2019,
	title = {Interdisciplinary research to enhance ecosystem service ({ES}) delivery along the Great Green Wall for the Sahara and Sahel Initiative ({GGW}) in Senegal},
	url = {https://www.espconference.org/africa2019},
	abstract = {To meet the environmental and social challenges in the Sahel, there is a growing need for ambitious and innovative strategies. The adoption in 2007 of the pan African Great Green Wall ({GGW}), a reforestation program aimed at stopping desert encroachment, is a step in the right direction. Even if the {GGW} has shifted away from the original vision of a “wall of trees” across the African continent, trees still remain a central focus of the initiative. In Africa, trees provide a wide range of {ES} for the daily lives of local populations. The success of the {GGW} will depend on its capacity to intelligently gather, generate, integrate, and use knowledge derived from a range of scientific disciplines. Future Sahel, a French government-funded research program brings together multidisciplinary, international scientists and {GGW} natural resource managers in Senegal, providing a unique opportunity to guide the {GGW} along an evidence-based path (future-sahel.blogspot.com/). Our research seeks to fills knowledge gaps that would enable the {GGW} to optimize the supply of abundant, diverse, equitable, and sustainable tree-based {ES} along its path. First, we seek to maximize the biodiversity of {GGW} tree planting, and hence {ES} diversity through a combination of ethnobotanical research and local-scale field trials in Senegal. Second, at the landscape scale, through participatory approaches in diverse social-ecological systems ({SES}), we have shown a variable dependence on different landscape units ({LU} = bush, pond banks, homesteads, communal gardens, raid-fed agricultural plots) for tree-based {ES} supply among the different {SES}. Finally, our research activities seek to operationalize “resilience thinking” and adapt it to the Sahel. Towards this end, we are piloting the Wayfinder, a {GRAID}1-funded resilience guide for navigating towards sustainable futures (http://graid.earth/projects/wayfinder/). {ES} delivery is at the core of this multi-stakeholder process.},
	eventtitle = {Ecosystem Services Partnership Africa},
	booktitle = {Ecosystem Services Partnership Africa},
	author = {Goffner, Deborah},
	date = {2019-06-17},
	note = {event-place: Kpalimé, Togo},
}

